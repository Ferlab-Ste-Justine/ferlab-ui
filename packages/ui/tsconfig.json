{
    "compilerOptions": {
        "incremental": true,
        "target": "es5",
        "module": "ESNext",
        "lib": ["es2021", "dom"],
        "allowJs": true,
        "jsx": "react",
        "outDir": "./core",
        "downlevelIteration": true,
        "strict": true,
        "moduleResolution": "node",
        "paths": {
            "@ferlab/style": ["../packages/style"],
            "@ferlab/style/*": ["../packages/style/*"]
        },
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src", "typings.d.ts", "../data/src/sqon"]
}
