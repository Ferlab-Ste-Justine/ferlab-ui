{
    "name": "@ferlab/ui",
    "version": "5.2.2",
    "description": "Core components for scientific research data portals",
    "publishConfig": {
        "access": "public"
    },
    "bin": {
        "ferlabui-script": "themes/bin/style-script.js"
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/Ferlab-Ste-Justine/ferlab-ui.git"
    },
    "module": "core/",
    "sideEffects": false,
    "typings": "index.d.ts",
    "files": [
        "core/**/*",
        "themes/**/*"
    ],
    "scripts": {
        "fix-linter": "eslint --fix --rule 'no-console: 2'",
        "build": "npm-run-all build:es build:esnext && tscp",
        "build:es": "tsc --declaration --sourceMap --outDir lib/es",
        "build:esnext": "tsc --declaration --declarationMap",
        "build:scss": "sass ./themes:./lib/esnext",
        "start": "tsc -w --declaration && tscp -w --declaration",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:github": "jest --coverage --watchAll=false --no-watchma  --coverageReporters=\"text-summary\"",
        "coverage": "jest --watchAll=false --coverage --coverageReporters=\"json-summary\"",
        "coverage:changed": "jest --coverage --watchAll=false --onlyChanged --coverageReporters=\"json-summary\"",
        "compile:colors": "./themes/bin/style-script.js colors"
    },
    "author": "Ferlab - Centre de recherche du CHU Ste-Justine",
    "license": "SEE LICENSE IN LICENSE",
    "devDependencies": {
        "@testing-library/dom": "^8.19.0",
        "@testing-library/jest-dom": "^5.16.5",
        "@testing-library/react": "^12.1.5",
        "@types/antd": "^1.0.0",
        "@types/classnames": "^2.2.11",
        "@types/jest": "^29.2.3",
        "@types/lodash": "^4.14.168",
        "@types/md5": "^2.3.2",
        "@types/react": "^16.9.51",
        "@types/react-router-dom": "^5.1.6",
        "@types/uuid": "^8.3.0",
        "@typescript-eslint/eslint-plugin": "^4.10.0",
        "@typescript-eslint/parser": "^4.10.0",
        "core-js": "^3.6.5",
        "eslint": "^7.15.0",
        "eslint-config-prettier": "^7.0.0",
        "eslint-plugin-prefer-arrow": "^1.2.3",
        "eslint-plugin-prettier": "^3.3.0",
        "eslint-plugin-react": "^7.22.0",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "eslint-plugin-sort-destructure-keys": "^1.3.5",
        "eslint-plugin-sort-keys-fix": "^1.1.1",
        "jest": "^29.3.1",
        "jest-environment-jsdom": "^29.3.1",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.2.1",
        "sass": "^1.26.12",
        "ts-jest": "^29.0.3",
        "ts-node": "^10.9.1",
        "typescript": "^4.4.4",
        "typescript-cp": "^0.1.7",
        "webpack-cli": "^3.3.12"
    },
    "peerDependencies": {
        "antd": "^4.20.0",
        "date-fns": "^2.29.3",
        "react": "^17.0.2",
        "react-dom": "^17.0.2"
    },
    "dependencies": {
        "@ant-design/icons": "^4.7.0",
        "@dnd-kit/core": "^4.0.3",
        "@dnd-kit/sortable": "^5.1.0",
        "@dnd-kit/utilities": "^3.2.0",
        "classnames": "^2.2.6",
        "command-line-args": "^5.1.1",
        "cross-spawn": "^7.0.3",
        "history": "^4.9.0",
        "less": "^4.1.0",
        "less2sass": "^1.0.3",
        "md5": "^2.3.0",
        "query-string": "^7.0.1",
        "react-icons": "^4.2.0",
        "simplebar-react": "^2.4.3",
        "uuid": "^8.3.2",
        "xss": "^1.0.9"
    },
    "bugs": {
        "url": "https://github.com/Ferlab-Ste-Justine/ferlab-ui/issues"
    },
    "homepage": "https://github.com/Ferlab-Ste-Justine/ferlab-ui#readme"
}
