{
    "name": "@ferlab/ui",
    "version": "2.4.0",
    "description": "Core components for scientific research data portals",
    "publishConfig": {
        "access": "public"
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/Ferlab-Ste-Justine/ferlab-ui.git"
    },
    "module": "core/",
    "sideEffects": false,
    "typings": "index.d.ts",
    "files": [
        "core/**/*"
    ],
    "scripts": {
        "fix-linter": "eslint --fix --rule 'no-console: 2'",
        "build": "npm-run-all build:es build:esnext",
        "build:es": "tsc --declaration --outDir lib/es",
        "build:esnext": "tsc --declaration",
        "build:scss": "sass ./src:./lib/esnext",
        "start": "tsc -w --declaration",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "author": "Ferlab - Centre de recherche du CHU Ste-Justine",
    "license": "SEE LICENSE IN LICENSE",
    "devDependencies": {
        "@types/antd": "^1.0.0",
        "@types/classnames": "^2.2.11",
        "@types/lodash": "^4.14.168",
        "@types/react": "^16.9.51",
        "@types/react-router-dom": "^5.1.6",
        "@types/uuid": "^8.3.0",
        "@typescript-eslint/eslint-plugin": "^4.10.0",
        "@typescript-eslint/parser": "^4.10.0",
        "core-js": "^3.6.5",
        "eslint": "^7.15.0",
        "eslint-config-prettier": "^7.0.0",
        "eslint-plugin-prefer-arrow": "^1.2.3",
        "eslint-plugin-prettier": "^3.3.0",
        "eslint-plugin-react": "^7.22.0",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "eslint-plugin-sort-destructure-keys": "^1.3.5",
        "eslint-plugin-sort-keys-fix": "^1.1.1",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.2.1",
        "sass": "^1.26.12",
        "typescript": "^4.4.4",
        "webpack-cli": "^3.3.12"
    },
    "peerDependencies": {
        "@ferlab/style": "^1.11.0",
        "antd": "^4.2.0",
        "react": ">=16.0.0"
    },
    "dependencies": {
        "classnames": "^2.2.6",
        "history": "^4.9.0",
        "query-string": "^7.0.1",
        "react-icons": "^4.2.0",
        "simplebar-react": "^2.3.6",
        "uuid": "^8.3.2",
        "xss": "^1.0.9"
    },
    "bugs": {
        "url": "https://github.com/Ferlab-Ste-Justine/ferlab-ui/issues"
    },
    "homepage": "https://github.com/Ferlab-Ste-Justine/ferlab-ui#readme"
}
