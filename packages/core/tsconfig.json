{
    "compilerOptions": {
        "declaration": true,
        "incremental": false,
        "target": "ES2017",
        "module": "CommonJS",
        "lib": ["es2021", "ES2021.String", "dom"],
        "allowJs": false,
        "jsx": "react",
        "outDir": "./core",
        "downlevelIteration": true,
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "rootDir": "src",
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["typings.d.ts", "src/**/*", "../data/src/sqon/**/*"],
    "exclude": ["src/**/*.spec.ts", "src/**/*.test.ts"]
}
